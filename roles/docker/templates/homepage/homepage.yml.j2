services:
  homepage:
    image: ghcr.io/gethomepage/homepage:latest
    container_name: homepage
    restart: unless-stopped

    environment:
      HOMEPAGE_ALLOWED_HOSTS: "{{ homepage_allowed_hosts | default('gethomepage.dev') }}"
      PUID: "{{ homepage_puid | default(1000) }}"
      PGID: "{{ homepage_pgid | default(1000) }}"

    ports:
{% for p in homepage_ports %}
      - "{{ p }}"
{% endfor %}

    volumes:
      - "/srv/docker/homepage/config:/app/config"
      - "/var/run/docker.sock:/var/run/docker.sock:ro"