services:
  app:
    image: 'jc21/nginx-proxy-manager:latest'
    restart: unless-stopped
    ports:
{% for p in npm_ports %}
      - "{{ p }}"
{% endfor %}
    volumes:
      - "/srv/docker/npm/data:/data"
      - "/srv/docker/npm/letsencrypt:/etc/letsencrypt"
    dns:
      - 1.1.1.1
      - 8.8.8.8